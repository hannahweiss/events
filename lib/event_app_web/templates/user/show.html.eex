<h1>Show User</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @user.name %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @user.email %>
  </li>

  <%= if @user.photo_hash do %>
    <div>
      <img class="profile-photo" src="<%= Routes.user_path(@conn, :photo, @user) %>" alt="">
    </div>
  <% end %>

  

</ul>

<span><%= link "Edit", to: Routes.user_path(@conn, :edit, @user) %></span>
<span><%= link "Back", to: Routes.user_path(@conn, :index) %></span>
